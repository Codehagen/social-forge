{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/lovable/*": ["./components/lovable/*"],
      "@/lib/lovable/*": ["./lib/lovable/*"],
      "@/hooks/lovable/*": ["./hooks/lovable/*"],
      "@/utils/lovable/*": ["./utils/lovable/*"],
      "@/types/lovable/*": ["./types/lovable/*"],
      "@/atoms/lovable/*": ["./atoms/lovable/*"],
      "@/styles/lovable/*": ["./styles/lovable/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
